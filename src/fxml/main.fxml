<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="280.0" prefWidth="460.0">
            <children>
                <HBox prefHeight="60.0" prefWidth="460.0">
                    <children>
                        <ComboBox fx:id="cmbChoicePort" onAction="#showPorts" prefWidth="130.0">
                            <HBox.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </HBox.margin>
                        </ComboBox>
                        <Button fx:id="btnOpenPort" mnemonicParsing="false" onAction="#openPort" prefWidth="100.0" text="Open port">
                            <HBox.margin>
                                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="btnClosePort" mnemonicParsing="false" onAction="#closePort" prefWidth="100.0" text="Close port">
                            <HBox.margin>
                                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <HBox layoutY="61.0" prefHeight="38.0" prefWidth="460.0">
                    <children>
                        <Label text="Port status:">
                            <HBox.margin>
                                <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="txtPortStatus" text="Close">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <VBox layoutY="101.0" prefHeight="172.0" prefWidth="146.0">
                    <children>
                        <CheckBox fx:id="chboxRedLed" mnemonicParsing="false" text="Red led">
                            <VBox.margin>
                                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                            </VBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="chboxBlueLed" mnemonicParsing="false" text="Blue led">
                            <VBox.margin>
                                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                            </VBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="chboxGreenLed" mnemonicParsing="false" text="Green led">
                            <VBox.margin>
                                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                            </VBox.margin>
                        </CheckBox>
                    </children></VBox>
                <VBox layoutX="289.0" layoutY="101.0" prefHeight="190.0" prefWidth="171.0">
                    <children>
                        <Button fx:id="btnLedOn" mnemonicParsing="false" onAction="#ledOn" prefWidth="100.0" text="Led ON">
                            <VBox.margin>
                                <Insets bottom="15.0" left="30.0" right="20.0" top="15.0" />
                            </VBox.margin>
                        </Button>
                        <Button fx:id="btnLedOff" mnemonicParsing="false" onAction="#ledOf" prefWidth="100.0" text="Led OFF">
                            <VBox.margin>
                                <Insets bottom="15.0" left="30.0" right="15.0" top="10.0" />
                            </VBox.margin>
                        </Button>
                        <Button fx:id="btnExit" cancelButton="true" mnemonicParsing="false" onAction="#closeMainWindow" prefWidth="100.0" text="Exit">
                            <VBox.margin>
                                <Insets left="30.0" top="15.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
                <VBox layoutX="146.0" layoutY="101.0" prefHeight="172.0" prefWidth="146.0">
                    <children>
                        <CheckBox fx:id="chboxYellowLed" mnemonicParsing="false" text="Yellow led">
                            <VBox.margin>
                                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                            </VBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="chboxOrangeLed" mnemonicParsing="false" text="Orange led">
                            <VBox.margin>
                                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                            </VBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="chboxWhiteLed" mnemonicParsing="false" text="White led">
                            <VBox.margin>
                                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                            </VBox.margin>
                        </CheckBox>
                    </children>
                </VBox>
            </children>
        </Pane>
    </children>
</GridPane>
